---
import { basics } from "@cv";

const { name, label, image, email, phone, url, summary, location, profiles } =
  basics;

const { city, region } = location;
---

<section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        {city}, {region}
      </span>
      <footer>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Send an email to ${name} at ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              {email}
            </a>
          )
        }
      </footer>
    </div>
  </div>
</section>
