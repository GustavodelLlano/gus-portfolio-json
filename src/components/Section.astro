---
const { title } = Astro.props;
---

<section>
    {title && <h2>{title}</h2>}
    <slot />
</section>

<style>
    section:not(:first-child) {
        padding-top: 48px;
    }
    section {
        max-width: 750px;
        margin: 0 auto;
    }

    h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 8px;
        line-height: 1.5;
    }

    @media (width <= 700px) {
        section {
            margin-bottom: 38px;
        }
    }
</style>
