---
import { formatDate } from "@/utils/date.utils";
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Experience">
    <ul>
        {
            work.map(({ name, position, url, startDate, endDate, summary }) => {
                const fullTime = formatDate(startDate, endDate);

                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>
                                        <a
                                            href={url}
                                            target="_blank"
                                            title={`Ver el proyecto ${name}`}
                                        >
                                            {name}
                                        </a>
                                    </h3>
                                    <h4>{position}</h4>
                                </div>
                                <time>{fullTime}</time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.25rem;
        align-items: flex-start;
    }

    article h3 {
        color: #111;
        font-weight: 500;
    }

    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }
    time {
        color: #555;
        font-size: 0.9rem;
        min-width: 102px;
    }

    @media (width <= 700px) {
        time {
            text-align: right;
        }
    }
</style>
